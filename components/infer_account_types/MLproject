name: infer_account_types
conda_env: conda.yaml

entry_points:
    main:
        parameters:
            mode:
                description: whether to push artifacts remotely
                type: str
            
            input_path:
                description: where to find the input artifact
                type: str

            random_state:
                description: seed for setting random state
                type: int
                default: null

        command: "python run.py {mode} {input_path} --random_state {random_state}" 